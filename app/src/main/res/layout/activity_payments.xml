<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar with Back Button -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/paymentToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="4dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Payment Method Spinner -->
            <Spinner
                android:id="@+id/spinnerPaymentMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown" />

            <!-- Order ID Input -->
            <EditText
                android:id="@+id/edtOrderId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Order ID"
                android:inputType="number" />

            <!-- Card Last 4 Digits Input -->
            <EditText
                android:id="@+id/edtCardDigits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Card Last 4 Digits"
                android:inputType="numberPassword"
                android:maxLength="4" />

            <!-- Bank Name Input -->
            <EditText
                android:id="@+id/edtBankName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bank Name"
                android:inputType="textPersonName" />

            <!-- Total Amount Display -->
            <TextView
                android:id="@+id/txtTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount: R0.00"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingTop="12dp" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/btnPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Payment" />


            <!-- Result TextView -->
            <TextView
                android:id="@+id/txtResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/holo_green_dark"
                android:paddingTop="12dp"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
